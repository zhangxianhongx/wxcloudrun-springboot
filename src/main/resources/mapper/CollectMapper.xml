<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.CollectMapper">

    <resultMap id="objectMapper" type="com.tencent.wxcloudrun.model.Collect">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="shopId" column="shop_id"/>
        <result property="userId" column="user_id"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="createTime" column="created_time" javaType="java.time.LocalDateTime" />
    </resultMap>

    <select id="getShopCollect" resultMap="objectMapper" parameterType="java.lang.Integer">
        SELECT *
        FROM t_client_collect
        WHERE shop_id=#{shopId} status = 0 order by sort
    </select>
    <select id="getUserCollect" resultMap="objectMapper" parameterType="java.lang.Integer">
        SELECT *
        FROM t_client_collect
        WHERE user_id=#{userId} status = 0 order by sort
    </select>

</mapper>
