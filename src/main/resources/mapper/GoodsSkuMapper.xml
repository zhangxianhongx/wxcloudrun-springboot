<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.GoodsSkuMapper">

    <resultMap id="objectMapper" type="com.tencent.wxcloudrun.model.GoodsSku">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="count" column="count"/>
        <result property="goodsId" column="goods_id"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="descs" column="descs"/>
        <result property="price" column="price"/>
        <result property="createTime" column="created_time" javaType="java.time.LocalDateTime" />
    </resultMap>

    <select id="getGoodsSku" resultMap="objectMapper" parameterType="java.lang.Integer">
        SELECT *
        FROM t_client_goods_sku
        WHERE goods_id=#{goodsId} status = 0 order by sort
    </select>


</mapper>