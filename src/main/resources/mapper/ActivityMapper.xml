<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.ActivityMapper">

    <resultMap id="activityMapper" type="com.tencent.wxcloudrun.model.Activity">
        <id property="id" column="id"/>
        <result property="activityTitle" column="activity_title"/>
        <result property="activityDetail" column="activity_detail"/>
        <result property="source" column="source"/>
        <result property="startTime" column="start_time" javaType="java.time.LocalDateTime" />
        <result property="endTime" column="end_time" javaType="java.time.LocalDateTime"  />
        <result property="descs" column="descs"/>
        <result property="shopId" column="shop_id"/>
        <result property="activityExplain" column="activity_explain"/>
        <result property="activityImages" column="activity_images"/>
        <result property="shareTitle" column="share_title"/>
        <result property="shareImage" column="share_image"/>
        <result property="shareSubTitle" column="share_sub_title"/>
        <result property="activityStatus" column="activity_status"/>
        <result property="limitCount" column="limit_count"/>
    </resultMap>

    <select id="getActivity" resultMap="activityMapper" parameterType="java.lang.Integer">
        SELECT *
        FROM Counters
        WHERE id = #{id}
    </select>

</mapper>
